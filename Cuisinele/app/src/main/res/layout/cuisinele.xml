<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nestedScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cuisinele"
    tools:ignore="SpeakableTextPresentCheck">

    <AutoCompleteTextView
        android:id="@+id/countryTextField"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="40dp"
        android:autofillHints="countryName"
        android:clickable="true"
        android:cursorVisible="true"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="Enter Country..."
        android:inputType="text"
        android:textColorHint="#8D6E63"
        android:textIsSelectable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/countryTextField"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cuisineleImage"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:minHeight="250dp"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="10dp"
                android:text="Hint" />

            <Button
                android:id="@+id/displayGuessButton"
                android:text="@string/DisplayGuess"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:padding="10dp"
                android:layout_gravity="center_horizontal"
                style="@style/Widget.AppCompat.Button.Small" />

            <!-- todo: fix the height when images are added properly    -->
            <LinearLayout
                android:id="@+id/guessDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="invisible">

            <TextView
                android:id="@+id/guess1TextView"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/guessbox" />

            <TextView
                android:id="@+id/guess2TextView"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/guessbox" />

            <TextView
                android:id="@+id/guess3TextView"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/guessbox" />

            <TextView
                android:id="@+id/guess4TextView"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/guessbox" />

            <TextView
                android:id="@+id/guess5TextView"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/guessbox" />
        </LinearLayout>
       </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>