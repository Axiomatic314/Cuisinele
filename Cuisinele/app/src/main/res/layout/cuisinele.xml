<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nestedScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cuisinele"
    tools:ignore="SpeakableTextPresentCheck">

    <AutoCompleteTextView
        android:id="@+id/countryTextField"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="40dp"
        android:autofillHints="countryName"
        android:ems="10"
        android:hint="Enter Country..."
        android:inputType="text"
        android:textColorHint="#8D6E63"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/countryTextField"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cuisineleImage"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:minHeight="250dp"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/dishName"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textSize="18sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/hintButtonDisplay1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="55dp"
                    android:text="@string/GetHint"
                    android:padding="10dp"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/hintDisplay1"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_gravity="fill"
                    android:textSize="40sp"
                    android:layout_weight="1"
                    android:layout_height="55dp"/>
                <Button
                    android:id="@+id/hintButtonDisplay2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="55dp"
                    android:text="@string/GetHint"
                    android:padding="10dp"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/hintDisplay2"
                    android:visibility="gone"
                    android:gravity="center"
                    android:layout_gravity="fill"
                    android:textSize="16sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="55dp" />
                <Button
                    android:id="@+id/hintButtonDisplay3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="55dp"
                    android:text="@string/GetHint"
                    android:padding="10dp"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/hintDisplay3"
                    android:visibility="gone"
                    android:layout_gravity="fill"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="55dp" />
            </LinearLayout>
<!--            <Button-->
<!--                android:id="@+id/displayGuessButton"-->
<!--                android:text="@string/HideGuess"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="48dp"-->
<!--                android:padding="10dp"-->
<!--                android:layout_gravity="center_horizontal"-->
<!--                style="@style/Widget.AppCompat.Button.Small" />-->

            <TableLayout
                android:id="@+id/guessDisplay"
                android:layout_width="fill_parent"
                android:layout_marginTop="10dp"
                android:layout_height="200dp"
                android:stretchColumns="0,1"
                android:gravity="center">

                <TableRow
                    android:background="#000000"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_margin="1dp"
                        android:layout_column="0"
                        android:background="@color/blue"
                        android:gravity="center"
                        android:id="@+id/guess1TextView"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_margin="1dp"
                        android:layout_column="0"
                        android:background="@color/blue"
                        android:gravity="center"
                        android:id="@+id/guess2TextView"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        />
                </TableRow>
                <TableRow
                    android:background="#000000"
                    android:layout_width="fill_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_margin="1dp"
                        android:layout_column="0"
                        android:background="@color/blue"
                        android:gravity="center"
                        android:id="@+id/guess3TextView"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_margin="1dp"
                        android:layout_column="0"
                        android:background="@color/blue"
                        android:gravity="center"
                        android:id="@+id/guess4TextView"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        />
                </TableRow>
                <TableRow
                    android:background="#000000"
                    android:layout_width="fill_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_margin="1dp"
                        android:layout_column="0"
                        android:background="@color/blue"
                        android:gravity="center"
                        android:id="@+id/guess5TextView"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_margin="1dp"
                        android:layout_column="0"
                        android:background="@color/blue"
                        android:gravity="center"
                        android:id="@+id/guess6TextView"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        />
                </TableRow>
            </TableLayout>
       </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>